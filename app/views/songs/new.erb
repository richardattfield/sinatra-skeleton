<% if @song.errors.any? %>
  <div>
    <strong>Errors were encountered trying to create your entry. Please review your input:</strong>
    <ul>
      <% @song.errors.full_messages.each do |error| %>
        <li>
          <%= error %>
        </li>
        <% end %>
    </ul>
  </div>
<% end %>


<form method="post" action="/songs">
  <div>
    <label>Artist:</label>
    <input type="text" name="artist" value="<%= @song.artist %>" />
  </div>

  <div>
    <label>URL: (enter "http://domain")</label>
    <input type="text" name="URL" value="<%= @song.URL %>" />
  </div>

  <div>
    <label>Title:</label>
    <input type="text" name="title" value="<%= @song.title %>" />
  </div>

  <div>
    <input type="submit" value="Submit" />
  </div>

</form>
